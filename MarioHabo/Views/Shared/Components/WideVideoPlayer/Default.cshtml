@using MarioHabo.Models;
@model VideoPlayerModel;


<div class="widevideocontainer bg-primary">
@{
        var iter = 0;
        @foreach(var item in Model.VideoSource)
    {

        if(iter == 0)
            {
                <video autoplay="autoplay" muted="muted" preload="auto">
                    <source src="@item" type="audio/mp4"/>
                </video>
                iter++;
            }
            else
            {
                <video muted="muted" preload="auto">
                    <source src="@item" type="audio/mp4"/>
                </video>
                
            }
        
    }
    }
    <div class="videotextcontaier d-inline-block text-break">
        <div class="d-inline-flex flex-grow flex-column ps-2 pe-2 text-break">
            <div class="d-inline-flex">
                <h2>@Model.Header</h2>
            </div>
            <div class="d-inline-flex flex-grow flex-column ps-4 pe-4 text-break">
                <p>@Model.Text</p>
            </div>
        </div>
    </div>
</div>
